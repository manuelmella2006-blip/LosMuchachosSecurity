<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (Light Mode) -->
    <style name="Base.Theme.LosMuchachosSecurity" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors (Verde Santo TomÃ¡s) -->
        <item name="colorPrimary">@color/ust_green_primary</item>
        <item name="colorPrimaryVariant">@color/ust_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/ust_green_secondary</item>
        <item name="colorSecondaryVariant">@color/ust_green_primary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar (verde institucional) -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/ust_green_primary</item>
        <!-- iconos blancos -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- App theme -->
    <style name="Theme.LosMuchachosSecurity" parent="Base.Theme.LosMuchachosSecurity" />

    <!-- Full Screen theme (para Splash o Login con fondo completo) -->
    <style name="Theme.LosMuchachosSecurity.FullScreen" parent="Theme.LosMuchachosSecurity">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
