<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Dark Mode) -->
    <style name="Base.Theme.LosMuchachosSecurity" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors (Verde Santo Tomás más claro para dark mode) -->
        <item name="colorPrimary">@color/ust_green_secondary</item>
        <item name="colorPrimaryVariant">@color/ust_green_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/ust_green_light</item>
        <item name="colorSecondaryVariant">@color/ust_green_secondary</item>
        <item name="colorOnSecondary">@color/gray_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/gray_dark</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/gray_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/gray_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
    </style>
</resources>