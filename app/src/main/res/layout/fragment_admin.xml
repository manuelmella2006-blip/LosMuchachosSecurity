<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_admin.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel de Administración"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión avanzada del sistema"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp"/>

        <!-- Gestión de Datos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de Datos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnResetRegistros"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="🗑️ Resetear Registros del Día"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@color/warning"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnExportarPDF"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="📄 Exportar Historial a PDF"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="@color/ust_green_primary"
            android:layout_marginBottom="24dp"/>

        <!-- Advertencia -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/warning"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Advertencia"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Las acciones de administración afectan directamente la base de datos. Úsalas con precaución."
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>