<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloBarreras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Control de Barreras"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvSubtituloBarreras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desde aquí puedes abrir las barreras de entrada y salida del estacionamiento."
            android:textSize="14sp"
            android:textColor="@color/gris_medio"
            android:paddingBottom="16dp" />

        <!-- Card: BARRERA ENTRADA -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:backgroundTint="@color/fondo_tarjeta"
            card_view:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barrera de Entrada"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blanco"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvEstadoEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado: Desconocido"
                    android:textSize="14sp"
                    android:textColor="@color/gris_medio"
                    android:paddingBottom="12dp" />

                <Button
                    android:id="@+id/btnAbrirEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abrir entrada"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/verde_secundario"
                    android:textColor="@color/blanco" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card: BARRERA SALIDA -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:backgroundTint="@color/fondo_tarjeta"
            card_view:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barrera de Salida"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blanco"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvEstadoSalida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado: Desconocido"
                    android:textSize="14sp"
                    android:textColor="@color/gris_medio"
                    android:paddingBottom="12dp" />

                <Button
                    android:id="@+id/btnAbrirSalida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abrir salida"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/verde_secundario"
                    android:textColor="@color/blanco" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
