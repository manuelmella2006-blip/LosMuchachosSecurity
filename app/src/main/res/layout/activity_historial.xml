<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTituloHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Historial de Actividad IoT"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Tabla que contendrá los datos -->
    <TableLayout
        android:id="@+id/tableHistorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="*"
        android:background="#F8F8F8"
        android:padding="8dp">

        <!-- Encabezado de la tabla -->
        <TableRow android:background="#E0E0E0" android:padding="6dp">
            <TextView
                android:text="Fecha"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center" />
            <TextView
                android:text="Evento"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center" />
            <TextView
                android:text="Estado"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="center" />
        </TableRow>

        <!-- Filas de ejemplo iniciales -->
        <TableRow android:padding="6dp">
            <TextView
                android:text="29/10/2025 14:30"
                android:textColor="#333333"
                android:layout_weight="1"
                android:gravity="center" />
            <TextView
                android:text="Puerta abierta"
                android:textColor="#333333"
                android:layout_weight="1"
                android:gravity="center" />
            <TextView
                android:text="Completado"
                android:textColor="#1A7C00"
                android:layout_weight="1"
                android:gravity="center" />
        </TableRow>

        <TableRow android:padding="6dp">
            <TextView
                android:text="29/10/2025 14:35"
                android:textColor="#333333"
                android:layout_weight="1"
                android:gravity="center" />
            <TextView
                android:text="Sensor de movimiento"
                android:textColor="#333333"
                android:layout_weight="1"
                android:gravity="center" />
            <TextView
                android:text="Detectado"
                android:textColor="#C36F00"
                android:layout_weight="1"
                android:gravity="center" />
        </TableRow>
    </TableLayout>

    <!-- Botón para volver -->
    <Button
        android:id="@+id/btnVolverHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver al Menú Principal"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#007AFF"
        android:layout_marginTop="16dp"
        android:padding="14dp" />

</LinearLayout>
