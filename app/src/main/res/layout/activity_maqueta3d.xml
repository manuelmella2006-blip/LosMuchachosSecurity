<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_maqueta3d.xml - LOS MUCHACHOS SECURITY -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0B0E2A">

    <!-- ========== HEADER ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#85335E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maqueta 3D"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sistema de Estacionamiento Inteligente"
            android:textSize="14sp"
            android:textColor="#C5E5FD"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- ========== VISOR 3D ========== -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#262B54">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- WebView para modelo 3D -->
            <WebView
                android:id="@+id/webView3D"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <!-- Indicador de carga -->
            <ProgressBar
                android:id="@+id/progressBar3D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="#85335E"/>

        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- ========== CONTROLES ========== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Texto de ayuda -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Desliza para rotar | Pellizca para hacer zoom"
            android:textSize="12sp"
            android:textColor="#C5E5FD"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- BotÃ³n Volver -->
        <Button
            android:id="@+id/btnVolver3D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_rojo"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:padding="14dp"/>
    </LinearLayout>

</LinearLayout>
