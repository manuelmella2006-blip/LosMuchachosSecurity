<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panel de Administración"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/btnActivarSensores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar Sensores"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnDesactivarSensores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desactivar Sensores"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#F44336"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="12dp" />

        <Button
            android:id="@+id/btnAbrirBarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrir Barrera"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#1976D2"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCerrarBarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Barrera"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#1976D2"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="12dp" />

        <Button
            android:id="@+id/btnResetRegistros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resetear Registros del Día"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnExportarPDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exportar Historial a PDF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#9C27B0"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnExportarExcel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exportar Historial a Excel"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#009688"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnVolverAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver al Menú Principal"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#007AFF"
            android:layout_marginTop="12dp"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>
