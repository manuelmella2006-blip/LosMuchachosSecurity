<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_reservar.xml - LOS MUCHACHOS SECURITY -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0E2A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservar Estacionamiento"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona una plaza disponible o completa el formulario para reservar"
            android:textColor="#C5E5FD"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- Lista de Plazas Disponibles -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#383E70"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plazas Disponibles"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewDisponibles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:padding="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#383E70"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos de Reserva"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp"/>

                <!-- Campo Plaza -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N煤mero de Plaza"
                    android:textSize="14sp"
                    android:textColor="#C5E5FD"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerPlaza"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input_dark"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Campo Fecha -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Reserva"
                    android:textSize="14sp"
                    android:textColor="#C5E5FD"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_input_dark"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/etFecha"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Seleccionar fecha"
                        android:textColorHint="#7A80A8"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"/>

                    <ImageButton
                        android:id="@+id/btnCalendar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Seleccionar fecha"
                        app:tint="#C5E5FD"/>
                </LinearLayout>

                <!-- Campo Hora Inicio -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora de Inicio"
                    android:textSize="14sp"
                    android:textColor="#C5E5FD"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_input_dark"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/etHoraInicio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora inicio"
                        android:textColorHint="#7A80A8"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"/>

                    <ImageButton
                        android:id="@+id/btnTimeInicio"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Seleccionar hora"
                        app:tint="#C5E5FD"/>
                </LinearLayout>

                <!-- Campo Hora Fin -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora de Fin"
                    android:textSize="14sp"
                    android:textColor="#C5E5FD"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_input_dark"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/etHoraFin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora fin"
                        android:textColorHint="#7A80A8"
                        android:textColor="#FFFFFF"
                        android:background="@android:color/transparent"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"/>

                    <ImageButton
                        android:id="@+id/btnTimeFin"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Seleccionar hora"
                        app:tint="#C5E5FD"/>
                </LinearLayout>

                <!-- Bot贸n Reservar -->
                <Button
                    android:id="@+id/btnReservar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text=" Confirmar Reserva"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/bg_button_rojo"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#17A2B8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="癸 Informaci贸n"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Las reservas se confirman autom谩ticamente si la plaza est谩 disponible. Recibir谩s una notificaci贸n de confirmaci贸n."
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.9"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>