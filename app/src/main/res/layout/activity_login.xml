<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_login.xml - LOS MUCHACHOS SECURITY -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0E2A"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- ========== LOGO CIRCULAR CON BADGE ========== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logoCard"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="65dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#85335E"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Icono de Seguridad -->
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_security"
                    android:layout_gravity="center"
                    android:contentDescription="Logo Security"
                    app:tint="#FFFFFF"/>

                <!-- Badge SECURITY -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SECURITY"
                    android:textColor="#C5E5FD"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.15"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="4dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    style="@style/Widget.MaterialComponents.Badge"/>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- ========== TÃTULOS ========== -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sistema de\nEstacionamiento\nPrivado"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="start"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/logoCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa tus credenciales para continuar"
            android:textColor="#C5E5FD"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        <!-- ========== CARD DE LOGIN ========== -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="#363A5D"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="35dp">

                <!-- Campo Email con Icono Integrado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_input_dark"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ‰"
                        android:textSize="22sp"
                        android:textColor="#C5E5FD"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Correo electrÃ³nico"
                        android:textColorHint="#7A80A8"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"/>

                </LinearLayout>

                <!-- Campo ContraseÃ±a con Icono Integrado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_input_dark"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”’"
                        android:textSize="22sp"
                        android:textColor="#C5E5FD"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="ContraseÃ±a"
                        android:textColorHint="#7A80A8"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:maxLines="1"/>

                </LinearLayout>

                <!-- BotÃ³n Login -->
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="INICIAR SESIÃ“N"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_rojo"
                    android:elevation="6dp"
                    android:layout_marginTop="10dp"/>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="#85335E"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ========== EXTRAS ========== -->
        <LinearLayout
            android:id="@+id/layoutExtras"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cardLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <CheckBox
                android:id="@+id/cbRecordar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RecuÃ©rdame"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:buttonTint="#85335E"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OlvidÃ© mi contraseÃ±a"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

        <!-- ========== CREAR CUENTA ========== -->
        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿No tienes una cuenta? Crear"
            android:textColor="#C5E5FD"
            android:textSize="15sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/layoutExtras"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
