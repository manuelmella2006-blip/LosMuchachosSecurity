<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_historial.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_secondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TÃ­tulo -->
    <TextView
        android:text="Historial de Entradas y Salidas"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp" />

    <!-- Resumen -->
    <TextView
        android:id="@+id/tvResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargando resumen..."
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:background="@color/white"
        android:fontFamily="sans-serif-medium" />

    <!-- Tabla principal -->
    <TableLayout
        android:id="@+id/tableHistorial"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="*"
        android:background="@color/white"
        android:divider="@color/divider"
        android:showDividers="middle"
        android:padding="8dp">

        <!-- Encabezado -->
        <TableRow
            android:background="@color/ust_green_light"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Usuario"
                android:textStyle="bold"
                android:textColor="@color/ust_green_primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:text="Plaza"
                android:textStyle="bold"
                android:textColor="@color/ust_green_primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:text="Entrada"
                android:textStyle="bold"
                android:textColor="@color/ust_green_primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:text="Salida"
                android:textStyle="bold"
                android:textColor="@color/ust_green_primary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>