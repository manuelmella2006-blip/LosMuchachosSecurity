<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_editar_usuario.xml - LOS MUCHACHOS SECURITY -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#262B54">

    <!-- TÃ­tulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœï¸ Editar Usuario"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <!-- Campo Nombre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_input_dark"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤"
            android:textSize="20sp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etNombreEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nombre"
            android:textColorHint="#7A80A8"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:inputType="textPersonName"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Campo Email (deshabilitado) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_input_dark"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:alpha="0.6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ‰"
            android:textSize="20sp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etEmailEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Email"
            android:textColorHint="#7A80A8"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:enabled="false" />
    </LinearLayout>

    <!-- Campo TelÃ©fono -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_input_dark"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž"
            android:textSize="20sp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etTelefonoEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="TelÃ©fono"
            android:textColorHint="#7A80A8"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Selector de Rol -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rol"
        android:textSize="14sp"
        android:textColor="#C5E5FD"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rgRolEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <RadioButton
            android:id="@+id/rbUsuarioEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuario"
            android:textColor="#FFFFFF"
            android:buttonTint="#85335E" />

        <RadioButton
            android:id="@+id/rbAdminEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin"
            android:textColor="#FFFFFF"
            android:buttonTint="#85335E" />
    </RadioGroup>

    <!-- Selector de Estado -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textSize="14sp"
        android:textColor="#C5E5FD"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rgEstadoEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbActivoEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activo"
            android:textColor="#FFFFFF"
            android:buttonTint="#28A745" />

        <RadioButton
            android:id="@+id/rbInactivoEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inactivo"
            android:textColor="#FFFFFF"
            android:buttonTint="#952929" />
    </RadioGroup>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelarEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#383E70"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnGuardarEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_rojo" />
    </LinearLayout>

</LinearLayout>