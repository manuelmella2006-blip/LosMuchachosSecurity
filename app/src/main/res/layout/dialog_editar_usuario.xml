<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#262B54">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✏️ Editar Usuario"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Campo Nombre -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeColor="#85335E"
        app:hintTextColor="#7A80A8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNombreEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textColorHint="#7A80A8"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Email (deshabilitado) -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginTop="12dp"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeColor="#85335E"
        app:hintTextColor="#7A80A8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmailEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:enabled="false"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Teléfono -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Teléfono"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeColor="#85335E"
        app:hintTextColor="#7A80A8">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTelefonoEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:inputType="phone"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Selector de Rol -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rol"
        android:textSize="14sp"
        android:textColor="#C5E5FD"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/rgRolEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <RadioButton
            android:id="@+id/rbUsuarioEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuario"
            android:textColor="#FFFFFF"
            android:buttonTint="#85335E"/>

        <RadioButton
            android:id="@+id/rbAdminEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin"
            android:textColor="#FFFFFF"
            android:buttonTint="#85335E"/>
    </RadioGroup>

    <!-- Selector de Estado -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textSize="14sp"
        android:textColor="#C5E5FD"/>

    <RadioGroup
        android:id="@+id/rgEstadoEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbActivoEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activo"
            android:textColor="#FFFFFF"
            android:buttonTint="#28A745"/>

        <RadioButton
            android:id="@+id/rbInactivoEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Inactivo"
            android:textColor="#FFFFFF"
            android:buttonTint="#952929"/>
    </RadioGroup>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelarEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#383E70"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnGuardarEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_rojo"/>
    </LinearLayout>

</LinearLayout>
